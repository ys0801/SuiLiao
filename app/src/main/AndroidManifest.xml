<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="Chat" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.Chat.activity.EditInfoActivity"
            android:exported="false" />
        <activity android:name="com.example.Chat.activity.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.Chat.activity.RegisterActivity" />
        <activity android:name="com.example.Chat.activity.UserActivity" />
        <activity android:name="com.example.Chat.activity.CategoryActivity" />
        <activity android:name="com.example.Chat.activity.IndexActivity" />
        <activity android:name="com.example.Chat.activity.ChatActivity" />
    </application>

</manifest>